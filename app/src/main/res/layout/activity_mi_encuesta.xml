<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context=".MiEncuesta">


    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="ENCUESTA AL HABITANTE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="15dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/profileIv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_camara"
                app:c_border="true"
                app:c_border_color="@color/black"
                app:c_border_width="1dp" />

            <TextView
        android:id="@+id/textTitulo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARACTERÍSTICAS DE LA VIVIENDA:"
        android:layout_below="@+id/profileIv"
        android:textSize="15dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="15dp"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>



    <LinearLayout
        android:id="@+id/textPregunta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitulo1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/texto_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ELIJA UNA OPCION"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/check_casa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Casa"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_departamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Departamento"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_cuarto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Cuarto"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>
        <CheckBox
            android:id="@+id/check_otros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Otros"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <EditText
            android:id="@+id/campo_otros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:hint="¿Cuáles otros?"
            android:textColorHint="@color/gris"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textPregunta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPregunta1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/texto_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="NÚMERO DE PISOS"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/check_uno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="1"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="2"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_tres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="3"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_cuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="4"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textPregunta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPregunta2"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/texto_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TIPO DE TECHO"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/check_cinc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Cinc"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_teja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Teja"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_loseta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Loseta"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_loza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Loza"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/textPregunta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPregunta3"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/texto_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TIPO DE TECHO"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/check_madera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Madera"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_bloque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Bloque"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_hormigon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Hormigón"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox"/>

        <CheckBox
            android:id="@+id/check_loza1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Loza"
            android:textColor="@color/black"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>